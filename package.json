{
  "name": "@nxcd/hermod",
  "version": "1.0.0",
  "description": "SDK for messaging",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build:clean",
    "clean": "rm -rf ./dist",
    "test": "mocha --timeout 10000 --require ts-node/register --require source-map-support/register --recursive tests/**/*.test.ts",
    "coverage": "nyc mocha --timeout 10000 --require ts-node/register --require source-map-support/register --recursive tests/**/*.test.ts",
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "build:debug": "npm run clean && npm run build -- --sourceMap",
    "build:clean": "npm run clean && npm run build",
    "build:watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git@ssh.dev.azure.com:v3/nxcd/Nextcode/daredevil-sdk"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist/**/*.*",
      "src/index.ts",
      "src/presentation/server.ts",
      "coverage"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.5.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.11",
    "@types/chai": "^4.1.7",
    "@types/debug": "^4.1.4",
    "@types/nock": "^9.3.1",
    "@types/node": "^10.11.6",
    "axiosist": "^0.3.1",
    "chai": "^4.2.0",
    "concurrently": "^4.0.1",
    "husky": "^1.1.2",
    "lodash.merge": "^4.6.1",
    "mocha": "^5.2.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.4",
    "nyc": "^14.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.1"
  },
  "files": [
    "dist/**/*"
  ]
}
